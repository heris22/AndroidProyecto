<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojuego"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageButtonX"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ibX"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/x"
            android:onClick="cerrarApp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <ImageView
            android:id="@+id/imageButtonInfo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ibX"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/info"
            android:onClick="pantInfo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/imageButtonVideo"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ibX"
            android:layout_marginLeft="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/boton_video"
            android:onClick="pantVideo"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <ImageView
            android:id="@+id/imageButtonJugar"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ibX"
            android:layout_marginRight="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/boton_jugar"
            android:onClick="pantCarga"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/nami"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_marginLeft="140dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ibX"

            app:srcCompat="@drawable/nami" />


    </RelativeLayout>



</LinearLayout>